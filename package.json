{
  "private": true,
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format:write:ts": "npx prettier --write .",
    "format:write:rs": "cargo fmt --all",
    "format:write": "npm run format:write:rs && npm run format:write:ts",
    "format:check:ts": "npx prettier --check .",
    "format:check:rs": "npm run format:write:rs -- --check",
    "format:check": "npm run format:check:rs && npm run format:check:ts",
    "lint:ts": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "lint:rs": "cargo clippy --all-targets",
    "lint": "npm run lint:rs && npm run lint:ts",
    "build:prod": "wasm-pack build -- --all-targets",
    "build:dev": "wasm-pack build --dev -- --all-targets",
    "test": "wasm-pack test --node -- --all-targets",
    "dist:prod": "npm run format:write && npm run build:prod && npm run package:prod",
    "dist:dev": "npm run format:write && npm run build:dev && npm run package",
    "package": "npx webpack",
    "package:prod": "npx webpack --no-devtool",
    "package:watch": "npm run package -- --watch",
    "all": "npm run dist:prod && npm run lint && npm run test"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
